rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Connect to external functions if needed, but for now logic is inline or helper.

    // 1. Menu and Categories: Readable by everyone, Writable ONLY by Admin
    match /menu/{menuId} {
      allow read: if true;
      allow write: if isAuthenticated() && isAdmin();
    }
    
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAuthenticated() && isAdmin();
    }

    // 2. Orders: Writable by everyone (authenticated), Readable ONLY by creator or Admin
    match /orders/{orderId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Allow updates by admin (e.g. status change)
      allow update: if isAuthenticated() && isAdmin(); 
      // Allow read by owner or admin
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // 3. Users: Readable/Writable only by the owner
    match /users/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
    }
  }
}
